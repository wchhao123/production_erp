  <!--work-product-process-device联合查询-->
  <select id="selectWorkByCondition" resultMap="conditionResultMap">
    select
    w.work_id, w.process_number, w.rating,
    pd.product_id,pd.product_name,
    pc.process_id,
    d.device_id,d.device_name
    from work w
    left join product pd on w.product_id=pd.product_id
    left join process pc on w.process_id=pc.process_id
    left join device d on w.device_id=d.device_id
    <where>
      <choose>
        <when test="flag == 0"/>
        <when test="flag == 1">
          w.work_id = #{searchValue}
        </when>
        <when test="flag == 2">
          pd.product_name =  #{searchValue}
        </when>
        <when test="flag == 3">
          pc.process_id =  #{searchValue}
        </when>
        <when test="flag == 4">
          d.device_name = #{searchValue}
        </when>
      </choose>
    </where>
  </select>
